<h1 id="back-block">
    <form action="/clinician/patient_view" method="POST">
        <input type="hidden" name="patientID" value = {{patientID}}>
        <button>&lt; back: to patient view</button>
    </form>
</h1>

<div class="history-table-border">
    <table class="history-table">
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Notes</th>
        </tr>   
        <!--iterate over all notes and display-->
        {{#each notes}}
            <tr>
                <td>{{formatDate this.datetime "DD/MM/YYYY"}}</td>
                <td>{{formatDate this.datetime "hh:mm A"}}</td>
                <td>{{this.note}}</td>
            </tr>
        {{/each}}
    </table>
</div>